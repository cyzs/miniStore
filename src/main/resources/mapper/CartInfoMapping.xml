<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.hxsp.dao.CartInfoDao">
    <resultMap id="result" type="com.example.hxsp.bean.CartInfo">
        <id column="id" property="id"/>
        <result column="uid" property="uid"/>
    </resultMap>

<!--    查询所有-->
    <select id="selAll" resultType="com.example.hxsp.bean.CartInfo" resultMap="result">
        select * from cart_info
    </select>

    <!--根据用户id查询购物车id-->
    <select id="selOne" resultMap="result">
        select * from cart_info WHERE uid=#{uid}
    </select>

    <!--添加用户购物车-->
    <insert id="add" parameterType="com.example.hxsp.bean.CartInfo">
        INSERT INTO cart_info(id,uid) VALUES (#{id},#{uid})
    </insert>



</mapper>